@page
@model Oryx.SuperCode.Pages.Contents.ArticlePageModel
@{
}

<h2>@Model.ArticleData.Title</h2>
<p>
    <span>@Model.ArticleData.CreateTime</span>
    <span>@Model.ArticleData.Author</span>
</p>
<p>
    @Model.ArticleData.Description
</p>

<p>
    @Html.Raw(Model.ArticleData.Content)
</p>
<div>
    <form method="POST">
        <input type="hidden" name="articleId" value="@Model.ArticleData.Id" />
        <textarea name="content" style="width:100%;height:300px;"></textarea>
        <button class="btn btn-primary" asp-page-handler="CommentCreate">回复</button>
    </form>
</div>
<div>
    <ul>
        @foreach (var item in Model.Comments)
        {
            <li class="list-group-item" style="border:none;padding:0;">
                <div>
                    @item.AuthorName
                </div>
                <div>
                    @item.Content
                </div>
                <div>
                    <a href="#">回复</a>
                </div>
            </li>
        }
    </ul>
</div>